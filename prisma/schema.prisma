// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Block {
  blockHash         String   @id @unique
  index             String   @unique
  unit              String
  timestamp         DateTime
  title             String   @db.VarChar(255)
  sequenceNumber    Int
  amount            Decimal
  previousBlockHash String
  isGenesis         Boolean
}
